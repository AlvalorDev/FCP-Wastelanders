<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--__________ Traders __________-->

    <!--_____ Wasteland Traders _____-->

    <!--___ Crow Trader ___-->

    <TraderKindDef>
        <defName>FCP_Caravan_Crow_Trader</defName>
        <label>Crow</label>
        <stockGenerators>

            <!--__ Selling __-->

            <!--_ Apparel _-->

            <!-- Clothing -->

            <li Class="StockGenerator_Tag">
                <tradeTag>FCP_Wastelander_Apparel</tradeTag>
                <thingDefCountRange>9~15</thingDefCountRange>
                <countRange>4~10</countRange>
                <excludedThingDefs />
                <customCountRanges />
            </li>
            <li Class="StockGenerator_Tag">
                <tradeTag>FCP_Pre_War_Apparel</tradeTag>
                <thingDefCountRange>1~4</thingDefCountRange>
                <countRange>1~4</countRange>
                <excludedThingDefs />
                <customCountRanges />
            </li>

            <!-- Armor -->

            <li Class="StockGenerator_Tag">
                <tradeTag>FCP_Combat_Armors</tradeTag>
                <thingDefCountRange>1~4</thingDefCountRange>
                <countRange>0~3</countRange>
                <excludedThingDefs />
                <customCountRanges />
            </li>

            <!-- Misc -->

            <li Class="StockGenerator_Category">
                <categoryDef>Textiles</categoryDef>
                <thingDefCountRange>1~2</thingDefCountRange>
                <totalPriceRange>400~800</totalPriceRange>
                <excludedThingDefs>
                    <li MayRequire="Ludeon.RimWorld.Anomaly">Leather_Dread</li>
                </excludedThingDefs>
            </li>

            <!--__ Buying __-->

            <li Class="StockGenerator_BuyTradeTag"><tag>FCP_Wastelander_Apparel</tag></li>
            <li Class="StockGenerator_BuyTradeTag"><tag>FCP_Pre_War_Apparel</tag></li>
            <li Class="StockGenerator_BuyTradeTag"><tag>FCP_Combat_Armors</tag></li>

            <!--__ Currency __-->

            <!-- Caps -->

            <li Class="StockGenerator_SingleDef">
                <thingDef>FCP_Currency_Caps</thingDef>
                <countRange>750~1200</countRange>
            </li>
        </stockGenerators>
    </TraderKindDef>

